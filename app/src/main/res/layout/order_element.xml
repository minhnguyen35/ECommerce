<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/did"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="ID           :"
        />

    <TextView
        android:id="@+id/dmarket"
        android:layout_below="@id/did"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="Market  :"
        />

    <TextView
        android:id="@+id/ddate"
        android:layout_below="@id/dmarket"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="Date      :"
        />

    <TextView
        android:id="@+id/supermarketID"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/did"
        android:text="Super market id"
        />

    <TextView
        android:id="@+id/supermarketName"
        android:layout_below="@id/did"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/dmarket"
        android:text="Market name"
        />

    <TextView
        android:id="@+id/orderDate"
        android:layout_below="@id/dmarket"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/ddate"
        android:text="DD/MM/YYYY"
        />

    <TextView
        android:id="@+id/shipType"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/supermarketID"
        android:gravity="right"
        android:text="COD/ Bank"
        />

    <TextView
        android:id="@+id/checkOutType"
        android:layout_below="@id/did"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/supermarketName"
        android:gravity="right"
        android:text="Take over/ Delivery"
        />

    <TextView
        android:id="@+id/status"
        android:layout_below="@id/dmarket"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/orderDate"
        android:gravity="right"
        android:text="Finished/ Process"
        />

    <TextView
        android:id="@+id/dtotal"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/ddate"
        android:gravity="center"
        android:text="Total:"
        />

    <TextView
        android:id="@+id/total"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_below="@id/ddate"
        android:layout_toRightOf="@id/dtotal"
        android:gravity="center"
        android:text="999 999 9999"
        />

    <TextView
        android:id="@+id/dunit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/ddate"
        android:layout_toRightOf="@id/total"
        android:gravity="center"
        android:text="(VND)"
        />

</RelativeLayout>