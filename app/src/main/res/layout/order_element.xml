<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        card_view:cardBackgroundColor="#69F0B1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/did"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text=" ID           :"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/dmarket"
        android:layout_below="@id/did"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text=" Market  :"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/ddate"
        android:layout_below="@id/dmarket"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text=" Date      :"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/supermarketID"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/did"
        android:text="Super market id"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/supermarketName"
        android:layout_below="@id/did"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/dmarket"
        android:text="Market name"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/orderDate"
        android:layout_below="@id/dmarket"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/ddate"
        android:text="DD/MM/YYYY"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/shipType"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/supermarketName"
        android:layout_below="@id/status"
        android:gravity="center"
        android:text="COD/ Bank"
        />

    <TextView
        android:id="@+id/checkOutType"
        android:layout_below="@id/shipType"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/supermarketName"
        android:gravity="center"
        android:text="Take over/ Delivery"
        />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/supermarketName"
        android:gravity="center"
        android:text="Finished/ Process"
        android:background="@color/colorStatus_finished"
        android:textColor="@color/colorWord"
        />

    <TextView
        android:id="@+id/dtotal"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_below="@id/ddate"
        android:gravity="center"
        android:text="Total:"
        android:background="#FF9100"
        android:textColor="#EEFF41"
        />

    <TextView
        android:id="@+id/orderTotal"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/ddate"
        android:layout_toRightOf="@id/dtotal"
        android:gravity="center"
        android:text="999 999 9999"
        />

    <TextView
        android:id="@+id/dunit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/ddate"
        android:layout_toRightOf="@id/orderTotal"
        android:gravity="center"
        android:text="(VND)"
        />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>